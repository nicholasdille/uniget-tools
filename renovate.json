{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "enabledManagers": [
    "regex"
  ],

  "major": {
    "labels": ["type/renovate", "bump/major"]
  },
  "minor": {
    "labels": ["type/renovate", "bump/minor"]
  },
  "patch": {
    "labels": ["type/renovate", "bump/patch"]
  },
  "pin": {
    "labels": ["type/renovate", "bump/pin"]
  },
  "digest": {
    "labels": ["type/renovate", "bump/digest"]
  },

  "regexManagers": [
    {
      "fileMatch": [
        "^docker-setup.sh$",
        "^.github/workflows/release.yml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": [ "^docker-setup.sh$" ],
      "matchStrings": [ "GO_VERSION=(?<currentValue>.*?)\n" ],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "^go(?<major>\\d+?)\\.(?<minor>\\d+?)\\.(?<patch>\\d+?)$"
    }
  ],

  "packageRules": [
    {
      "updateTypes": ["pin", "digest", "patch", "minor", "major"],
      "automerge": true
    },
    {
      "matchPackageNames": [ "docker/compose" ],
      "extractVersion": "^v?(?<version>.+)$"
    },
    {
      "packageNames": [ "kubernetes-sigs/kustomize" ],
      "extractVersion": "^kustomize/v(?<version>.+)$"
    },
    {
      "packageNames": [ "stedolan/jq" ],
      "extractVersion": "^jq-(?<version>.+)$"
    },
    {
      "matchPackageNames": [
        "docker/compose"
      ],
      "extractVersion": "^v?(?<version>.+)$"
    },
    {
      "matchPackageNames": [
        "containers/fuse-overlayfs",
        "nicholasdille/crun-static"
      ],
      "versioning": "loose",
      "extractVersion": "regex:^v(?<version>.+?)$"
    },
    {
      "packageNames": [
        "AkihiroSuda/cni-isolation",
        "aquasecurity/trivy",
        "containerd/containerd",
        "containerd/fuse-overlayfs-snapshotter",
        "containerd/nerdctl",
        "containerd/stargz-snapshotter",
        "containernetworking/plugins",
        "danielb42/kubeswitch",
        "docker/buildx",
        "docker/hub-tool",
        "docker/machine",
        "docker/scan-cli-plugin",
        "estesp/manifest-tool",
        "genuinetools/img",
        "getporter/porter",
        "helm/helm",
        "koalaman/shellcheck",
        "kubernetes/kompose",
        "kubernetes/kubernetes",
        "kubernetes-sigs/cluster-api",
        "kubernetes-sigs/cluster-api-provider-aws",
        "kubernetes-sigs/kind",
        "kubernetes-sigs/krew",
        "kubernetes/minikube",
        "mikefarah/yq",
        "moby/buildkit",
        "moby/moby",
        "nicholasdille/podman-static",
        "nicholasdille/conmon-static",
        "nicholasdille/buildah-static",
        "nicholasdille/skopeo-static",
        "opencontainers/runc",
        "oras-project/oras",
        "rancher/k3d",
        "regclient/regclient",
        "rootless-containers/rootlesskit",
        "rootless-containers/slirp4netns",
        "sigstore/cosign",
        "vmware-tanzu/carvel-kapp",
        "vmware-tanzu/carvel-ytt",
        "wagoodman/dive"
      ],
      "extractVersion": "^v(?<version>.+)$"
    }
  ]
}
